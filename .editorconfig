root = true

# Universal settings:
[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

# Batch files:
[*.bat]
indent_style = tab
end_of_line = crlf

# License file specific:
[LICENSE]
insert_final_newline = false

# Makefile specific:
[Makefile]
indent_style = tab

# Python files:
[*.py]
indent_size = 4
trim_trailing_whitespace = true

# Markdown files:
[*.md]
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

# JavaScript files:
[*.js]
indent_size = 2

# CSS files:
[*.css]
indent_size = 2

# JSON files:
[*.json]
indent_style = space
indent_size = 2

# YAML files:
[*.yml, *.yaml]
indent_size = 2
